html
    head
        title Passport Example
        link(rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css")
        link(rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css")
        link(rel="stylesheet" href="css/custom.css")
    body
        .container
            .page-header.text-center
                h1 <span class="fa fa-anchor"></span> Profile Page
                a(href="/logout").btn.btn-default.btn-sm Logout
            .row
                .col-sm-6
                    .well
                        h3 <span class="fa fa-user"></span> Local
                        p <strong>id</strong>: #{user._id}
                        p <strong>email</strong>: #{user.local.email}
                        p <strong>password</strong>: #{user.local.password}
                .col-sm-6
                    .well
                        h3 <span class="fa fa-facebook"></span> Facebook
                        p <strong>id</strong>: #{user.facebook.id}
                        p <strong>token</strong>: #{user.facebook.token}
                        p <strong>email</strong>: #{user.facebook.email}
                        p <strong>name</strong>: #{user.facebook.name}
                        