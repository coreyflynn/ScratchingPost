html
    head
        title Passport Example
        link(rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css")
        link(rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css")
        link(rel="stylesheet" href="css/custom.css")
    body
        .container
            .page-header.text-center
                h1 <span class="fa fa-leaf"></span> Database Credentials
                a(href="/logout").btn.btn-default.btn-sm Logout
            .row
                if user.local.email
                    .col-sm-6.col-sm-offset-3
                        .well
                            h3 <span class="fa fa-user"></span> Local
                            p <strong>id</strong>: #{user._id}
                            p <strong>email</strong>: #{user.local.email}
                            p <strong>password</strong>: #{user.local.password}
                if user.facebook.id
                    .col-sm-6.col-sm-offset-3
                        .well
                            h3.text-primary <span class="fa fa-facebook"></span> Facebook
                            p <strong>id</strong>: #{user.facebook.id}
                            p <strong>token</strong>: #{user.facebook.token}
                            p <strong>email</strong>: #{user.facebook.email}
                            p <strong>name</strong>: #{user.facebook.name}
                if user.twitter.id
                    .col-sm-6.col-sm-offset-3
                        .well
                            h3.text-info <span class="fa fa-twitter"></span> Twitter
                            p <strong>id</strong>: #{user.twitter.id}
                            p <strong>token</strong>: #{user.twitter.token}
                            p <strong>username</strong>: #{user.twitter.username}
                            p <strong>displayName</strong>: #{user.twitter.displayName}
                if user.google.id
                    .col-sm-6.col-sm-offset-3
                        .well
                            h3.text-danger <span class="fa fa-google-plus"></span> Google
                            p <strong>id</strong>: #{user.google.id}
                            p <strong>token</strong>: #{user.google.token}
                            p <strong>email</strong>: #{user.google.email}
                            p <strong>name</strong>: #{user.google.name}
                   
                        